var errors = "<%= @errors %>";
var rendered_body = false;
if ('<%= @errors %>' == '0')
{
    $.modal.close();
    $('.edit-form-overlay').remove();
    $('#simplemodal-container').remove();
    $('#simplemodal-overlay').remove();
}
else if (parseInt(errors) > 0 )
{
    document.getElementById('form_overlay_container').innerHTML = "<%= j (render template: 'issues/edit') %>";
}

$('body').append(" <%= j(javascript_include_tag('jstoolbar/jstoolbar-textile.min') +
              javascript_include_tag("jstoolbar/lang/jstoolbar-#{current_language.to_s.downcase}") +
              stylesheet_link_tag('jstoolbar'))%>");


if (typeof(datepickerOptions) !== 'undefined')
{
    $('body').append("<%=include_calendar_headers_tags %>")
}

$('body').append("<%#= j (call_hook :view_layouts_base_html_head)%>");
$('body').append("<div class= 'edit-form-overlay' id='form_overlay_container' style='display:none'></div>");


document.getElementById('form_overlay_container').innerHTML = "<%= j (render template: 'issues/show') %>";
$('body').append("<%= j (yield :header_tags) %>"); // this should be loaded after main form loaded, since so

$('.edit-form-overlay').modal();


$('.simplemodal-data').find('input[type=submit]').click(function(){
    $('form').submit(function() {
        var valuesToSubmit = $(this).serialize();
        $.ajax({
            type: "POST",
            url: '/update_issue_from_overlay', //sumbits it to the given url of the form
            data: valuesToSubmit,
            dataType: "script" // you want a difference between normal and ajax-calls, and json is standard
        }).success(function(json){
        });
        return false; // prevents normal behaviour
    });
});